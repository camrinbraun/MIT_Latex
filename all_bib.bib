	Issn = {09670637},
	Journal = {Deep-Sea Research Part I: Oceanographic Research Papers},
	Keywords = {Diel vertical migration,Mesoscale eddy,Mesozooplankton,Sargasso Sea},
	Number = {10},
	Pages = {1757--1776},
	Title = {{Zooplankton community structure in a cyclonic and mode-water eddy in the Sargasso Sea}},
	Volume = {56},
